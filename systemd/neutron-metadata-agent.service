[Unit]
Description=Neutron metadata agent
After=neutron-plugin-openvswitch-agent.service

[Service]
ExecStart=/usr/bin/neutron-metadata-agent --config-file=/etc/neutron/neutron.conf --config-file=/etc/neutron/metadata_agent.ini
User=root
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
